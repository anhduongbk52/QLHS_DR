<Window x:Class="QLHS_DR.CustomControl.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QLHS_DR.CustomControl"
        mc:Ignorable="d"
        Title="Nhập thông tin" Height="300" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Nhập thông tin:" Name="label1" Margin="10" VerticalAlignment="Center"/>
        <TextBox x:Name="InputTextBox" Grid.Row="1" Margin="10" VerticalAlignment="Center"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="OK" Width="75" Margin="5,0" Click="OkButton_Click"/>
            <Button Content="Hủy" Width="75" Margin="5,0" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>

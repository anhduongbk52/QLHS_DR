<Window x:Class="QLHS_DR.View.InputDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
       xmlns:local="clr-namespace:QLHS_DR.View"
        mc:Ignorable="d"
        WindowState="Normal"
        
        Title="InputDialogWindow" ResizeMode="NoResize" Height="100" Width="250"  WindowStyle="None" >
    <Grid>
        <StackPanel Margin="10">
            <TextBox Name="txtInput" Height="40"/>
            <StackPanel Orientation="Horizontal">
                <Button Content="OK" Click="Button_Click" Width="100" HorizontalAlignment="Right" Margin="5"/>
                <Button Content="Cancel" Click="Button_Click_1" Width="100" HorizontalAlignment="Right"  Margin="5"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
